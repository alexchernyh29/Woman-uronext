.product
    position relative
    height w(698)
    background $c-white
    +below(768px)
        height wm(1360)

    &__wrap
        padding-top w(125)
        max-width w(680)
        +below(768px)
            padding-top wm(75)
            max-width wm(680)
    
    &__title
        font-family $ff-lato-b
        font-weight 700
        font-size w(74)
        line-height w(68)
        letter-spacing 0.03em
        color $c-red
        span
            color $c-black
        +below(768px)
            width wm(640)
            font-size wm(74)
            line-height wm(68)

    &__text
        padding-top w(70)
        font-family $ff-lato
        font-weight 400
        font-size w(21)
        line-height w(28)
        color $c-black
        span
            font-family $ff-lato-b
            font-weight 700
        +below(768px)
            padding-top wm(70)
            font-size wm(21)
            line-height wm(28)
            width wm(570)

    &__btn
        margin-top w(40)
        width w(260)
        height w(65)
        background $c-yellow
        border-radius w(50)
        font-family $ff-lato-m
        font-style normal
        font-weight 500
        font-size w(24)
        line-height w(32)
        text-align center
        letter-spacing 0.03em
        text-transform uppercase
        color $c-white
        border none
        &:hover
            opacity 0.7
        +below(768px)
            margin-top wm(40)
            width wm(260)
            height wm(65)
            border-radius wm(50)
            font-size wm(24)
            line-height wm(32)

    &__line
        position absolute
        left 0
        bottom w(4)
        width w(1010)
        height w(1)
        background-color $c-yellow_3
        +below(768px)
            display none

    &__image
        position absolute
        top 0
        right 0
        width w(920)
        img
            width 100%
        +below(768px)
            width wm(920)
            top wm(620)
            img
                width 100%