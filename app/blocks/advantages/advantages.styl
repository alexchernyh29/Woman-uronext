.advantages
    background-color $c-grey
    position relative
    padding-bottom w(70)
    +below(768px)
        padding-bottom w(60)

    &__wrap
        display flex
        flex-direction row
        justify-content flex-end
        +below(768px)
            flex-direction column
            justify-content flex-start

    &__image
        position absolute
        top 0
        left 0
        width w(800)
        img
            width 100%
        +below(768px)
            position relative
            width wm(900)
            img
                width 100%

    &__advantages
        padding-left w(60)
        flex-direction column
        +below(768px)
            padding-left 0

    &__list
        display flex
        flex-direction column
        padding-top w(20)
        +below(768px)
            padding-top wm(50)
    
    &__item
        padding-top w(40)
        display flex
        flex-direction row
        +below(768px)
            padding-top wm(20)

    &__logo
        padding-top w(15)
        width w(290)
        img
            width 100%
        +below(768px)
            padding-top wm(15)
            width wm(290)
            img
                width 100%
    
    &__title
        padding-top w(25)
        font-family $ff-lato-b
        font-style normal
        font-weight 700
        font-size w(74)
        line-height w(88)
        letter-spacing 0.03em
        color $c-red
        +below(768px)
            font-size wm(74)
            line-height wm(88)
            padding-top 0

    &__text
        width w(635)
        padding-left w(30)
        font-family $ff-lato
        font-style normal
        font-weight 400
        font-size w(24)
        line-height w(29)
        color $c-black
        span
            color $c-yellow_1
            font-family $ff-lato-b
            font-weight 700
        +below(768px)
            width wm(635)
            padding-left wm(30)
            font-size wm(24)
            line-height wm(29)

    &__check_info
        width w(40)
        img
            width 100%
        +below(768px)
            width wm(40)
            img
                width 100%